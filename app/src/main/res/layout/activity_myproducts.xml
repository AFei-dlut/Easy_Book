<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MyproductsActivity">

    <TextView
        android:id="@+id/tv_myproducts_title"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="27dp"
        android:layout_marginBottom="12dp"
        android:text="我 的 发 布"
        android:textSize="24sp"
        app:layout_constraintBottom_toTopOf="@+id/tv_myproducts_uid"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/tv_myproducts_uid"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="12dp"
        android:layout_marginBottom="9dp"
        android:text="20162430630"
        app:layout_constraintBottom_toTopOf="@+id/lv_my_products"
        app:layout_constraintStart_toStartOf="@+id/tv_myproducts_title"
        app:layout_constraintTop_toBottomOf="@+id/tv_myproducts_title" />

    <ListView
        android:id="@+id/lv_my_products"
        android:layout_width="0dp"
        android:layout_height="0dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/tv_myproducts_uid" />

    <ImageView
        android:id="@+id/iv_refresh_myproducts"
        android:layout_width="45dp"
        android:layout_height="45dp"
        android:layout_marginTop="24dp"
        android:layout_marginEnd="36dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:srcCompat="@drawable/icon_refresh" />
</androidx.constraintlayout.widget.ConstraintLayout>